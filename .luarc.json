{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "diagnostics": {
    "disable": [
      "undefined-global",
      "unused-local",
      "missing-local-export-doc"
    ],
    "groupFileStatus": {
      "ambiguity": "Any",
      "await": "Any",
      "duplicate": "Any",
      "global": "Any",
      "luadoc": "Any",
      "redefined": "Any",
      "strict": "Any",
      "type-check": "Any",
      "unbalanced": "Any",
      "unused": "Any"
    },
    "ignoredFiles": "Opened",
    "libraryFiles": "Opened",
    "unusedLocalExclude": [
      "_*"
    ]
  },
  "runtime": {
    "version": "LuaJIT",
    "path": [
      "lua/?.lua",
      "lua/?/init.lua",
      "tests/?.lua",
      "tests/?/init.lua"
    ],
    "pathStrict": true
  },
  "globals": [
    "vim",
    "describe",
    "it"
  ],
  "workspace": {
    "maxPreload": 500,
    "preloadFileSize": 1000,
    "ignoreDir": [
      ".tests",
      ".repro"
    ],
    "checkThirdParty": false,
    "library": [
      "$VIMRUNTIME"
    ]
  },
  "typeFormat": {
    "config": {
      "format_line": "false"
    }
  },
  "type": {
    "castNumberToInteger": false
  },
  "doc": {
    "privateName": [
      "_*"
    ]
  }
}
